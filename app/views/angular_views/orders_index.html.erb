<div ng-controller="OrderQueueController">
  <div class="main-wrapper">
    <div class="main-left">
      <ul class="order-items">
        <li class="header palette-green-sea">
          Order Queue
        </li>
        <li ng-repeat="order in orders" style="overflow:auto;" ng-click="displayOrder(order)">
          <span class="item-name">{{order.user.name}}</span>
          <div class="item-info">
              Order #{{order.id}}
          </div>
        </li>
      </ul>
    </div>

    <div class="main-right">
      <div class="header palette-midnight-blue">
        Order Details
      </div>
      <div ng-show="currentOrder" ng-include = "'orders/{{currentOrder.id}}'">
      </div>
    </div>
  </div>
</div>